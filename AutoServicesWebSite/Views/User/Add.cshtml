@model Models.User

@{
    ViewData["Title"] = "Нов потребител - ";
}


<h4>НОВ ПОТРЕБИТЕЛ</h4>
<hr />
<div class="row">
    <form asp-action="Add">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="col-md-5">            
            <div class="form-group">
                <label asp-for="UserName" class="control-label">Псевдоним</label>
                <input asp-for="UserName" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="FirstName" class="control-label">Име</label>
                <input asp-for="FirstName" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="MiddleName" class="control-label">Презиме</label>
                <input asp-for="MiddleName" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="control-label">Фамилия</label>
                <input asp-for="LastName" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label">Парола</label>
                <input asp-for="Password" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="RoleId" class="control-label">Роля</label>
                <select asp-for="RoleId" class="form-control" asp-items="@(new SelectList(ViewBag.Role,"RoleId", "Name" ))"></select>
            </div>
        </div>
        <br />
        <br />
        <div class="form-group button-panel">
            <div class="col-md-5">
                <input type="submit" value="Запиши" class="btn btn-default" />
            </div>
            <div class="col-md-5 right">
                <input asp-action="Cancel" type="submit" value="Откажи" class="btn btn-default btn-danger right" />
            </div>
        </div>
        <div class="form-group">
            @Html.ValidationSummary()
        </div>
        @Html.AntiForgeryToken()
        <br />
        <br />
    </form>
</div>

